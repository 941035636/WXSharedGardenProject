/* 顶部要固定定位 标题要居中 自定义按钮和标题要和右边微信原生的胶囊上下对齐 */
cover-view{
  box-sizing:border-box;
}
.nav-wrap {
  /* display: none; */
  position: fixed;
  width: 100%;
  top: 0;
  background: #fff;
  color: #000;
  z-index: 9999999;
  background: #FFFFFF; 
  /* background: "#F8F8F8"; 蓝色*/
  /* background-color: transparent; */
  overflow: hidden;
 }
 /* 背景图 */
 .backgroundimg {
  position: absolute;
  left: 0; 
  top: 0;
  z-index: -1;
 }
 /* 标题要居中 */
 .nav-title {
  position: absolute;
  text-align: center;
  max-width: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  font-size: 36rpx;
  color: #2c2b2b;

 }
 
 .nav-capsule {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  width: 140rpx;
  justify-content: space-between;
  height: 100%; 
 }
 
 .back-pre {
  width: 20rpx;
  height: 30rpx;
  margin-top: 40rpx;
  padding: 10rpx;
 }
 .nav-capsule {
  width: 36rpx;
  height: 40rpx;
  margin-top: 3rpx;
 }